{
  "extends": "@repo/typescript-config/base.json",
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "nodenext",
    "lib": ["ES2023"],
    "moduleResolution": "nodenext",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/generated/**/*"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "replacers": {
      "keepExtension": true
    },
    "fileExtensions": ["js"],
    "exclude": ["**/generated/**/*"]
  }
}
